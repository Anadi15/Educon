<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.win8.studcrud.ViewStudent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:enabled="false"
            android:textColorHint="#F87217"
android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStudId"
            android:hint="StudentID"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:textColorHint="#F87217"
            android:id="@+id/editTextStudName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/editTextStudId" />

        <EditText
            android:hint="Email"
            android:textColorHint="#F87217"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStudEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/editTextStudName" />

        <EditText
            android:hint="Father Name"
            android:textColorHint="#F87217"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStudFather"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextStudEmail"
            android:layout_alignEnd="@+id/editTextStudEmail"
            android:layout_below="@+id/editTextStudEmail" />

        <EditText
            android:hint="Mother Name"
            android:layout_width="wrap_content"
            android:textColorHint="#F87217"

            android:layout_height="wrap_content"
            android:id="@+id/editTextStudMother"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextStudFather"
            android:layout_alignEnd="@+id/editTextStudFather"
            android:layout_below="@+id/editTextStudFather" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="gender"
            android:textColorHint="#F87217"

            android:id="@+id/editTextStudGender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextStudMother"
            android:layout_alignEnd="@+id/editTextStudMother"
            android:layout_below="@+id/editTextStudMother" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DOB"
            android:textColor="#F87217"

            android:id="@+id/tv7"
            android:layout_below="@+id/editTextStudGender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:hint="Date"
            android:textColorHint="#F87217"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStudDate"
            android:layout_below="@+id/tv7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/editTextStudMonth"
            android:layout_toStartOf="@+id/editTextStudMonth" />

        <EditText
            android:hint="Month"

            android:textColorHint="#F87217"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStudMonth"
            android:layout_below="@+id/tv7"
            android:layout_toLeftOf="@+id/editTextYear"
            android:layout_toStartOf="@+id/editTextYear" />

        <EditText
            android:hint="Year"
            android:layout_width="120dp"
            android:textColorHint="#F87217"

            android:layout_height="wrap_content"
            android:id="@+id/editTextYear"
            android:layout_alignTop="@+id/editTextStudMonth"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:hint="Address"
            android:textColorHint="#F87217"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editTextStudAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextStudDate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enrollment"
            android:textColorHint="#F87217"

            android:id="@+id/editTextStudEnrollment"
            android:layout_below="@id/editTextStudAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="39dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Teacher"
            android:id="@+id/buttonUpdate"

            android:background="#6975D2"
            android:textColor="#ffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/buttonDelete" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Teacher"
            android:id="@+id/buttonDelete"

            android:background="#6975D2"
            android:textColor="#ffff"
            android:layout_below="@+id/editTextStudEnrollment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teacher Personal Detail"
            android:textColor="#176CEC"
            android:textStyle="bold"
            android:id="@+id/textView42"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
