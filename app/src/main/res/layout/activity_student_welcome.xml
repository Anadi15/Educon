<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffff"
    tools:context="net.simplifiedcoding.userregistrationapp.UserProfile">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewUserName"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#176CEC"
            android:textStyle="bold"
            android:text="Student Page"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Detail"
            android:id="@+id/buttonEnterdetail"
            android:background="#33691E"
            android:textColor="#ffffff"
            android:layout_below="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/buttonStudChangepassword"
            android:background="#6975D2"
            android:textColor="#ffffff"
            android:layout_below="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonEnterdetail"
            android:layout_alignEnd="@+id/buttonEnterdetail" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/s"
            android:id="@+id/imageView10"

            android:layout_below="@+id/textViewUserName"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Notice"
            android:id="@+id/button13"
            android:layout_marginTop="12dp"
            android:background="#6975D2"
            android:textColor="#ffffff"
            android:layout_below="@+id/buttonEnterdetail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/buttonLog"
            android:layout_marginTop="12dp"
            android:background="#f44336"
            android:layout_below="@+id/button13"
            android:textColor="#ffff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />





    </RelativeLayout>
</ScrollView>

</RelativeLayout>