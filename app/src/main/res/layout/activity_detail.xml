<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.win8.educon.Detail">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:id="@+id/timageView"

            android:background="@drawable/a"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/editTexttEmail"
            android:layout_toRightOf="@+id/editTexttEmail"
            android:layout_above="@+id/buttonUpload" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:background="#6975D2"
            android:textColor="#ffff"
            android:id="@+id/buttonUpload"
            android:layout_alignBottom="@+id/editTexttFathername"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/editTexttFathername"
            android:layout_toEndOf="@+id/editTexttFathername" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/textView8"
            android:textColor="#F87217"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTexttName"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/timageView"
            android:layout_toLeftOf="@+id/timageView" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#F87217"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter email"
            android:id="@+id/textView9"
            android:layout_below="@+id/editTexttName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTexttEmail"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Father name"
            android:id="@+id/textView10"
            android:textColor="#F87217"
            android:layout_below="@+id/editTexttEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTexttFathername"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mother name"
            android:id="@+id/textView11"
            android:textColor="#F87217"
            android:layout_below="@+id/editTexttFathername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTexttMothername"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonUpload"
            android:layout_alignEnd="@+id/buttonUpload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gender"
            android:id="@+id/textView12"
            android:textColor="#F87217"
            android:layout_below="@+id/editTexttMothername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnertGender"
            android:entries="@array/gen"
            android:layout_alignTop="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:layout_toRightOf="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date of Birth"
            android:textColor="#F87217"
            android:id="@+id/textView13"
            android:layout_below="@+id/spinnertGender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:id="@+id/spinnertDate"
            android:entries="@array/Date"

            android:layout_below="@+id/textView13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:id="@+id/spinnertMonth"
            android:entries="@array/Month"

            android:layout_alignTop="@+id/spinnertDate"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:id="@+id/spinnertYear"

            android:entries="@array/Year"
            android:layout_alignTop="@+id/spinnertMonth"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address"
            android:id="@+id/textView14"
            android:textColor="#F87217"
            android:layout_below="@+id/spinnertDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTexttAddress"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enrollment number"
            android:textColor="#F87217"
            android:id="@+id/textView15"
            android:layout_below="@+id/editTexttAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"

            android:id="@+id/editTextEnrollment"
            android:layout_below="@+id/textView15"
            android:layout_alignRight="@+id/editTexttAddress"
            android:layout_alignEnd="@+id/editTexttAddress" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/buttonRegister"
            android:background="#6975D2"
            android:textColor="#ffff"
            android:layout_below="@id/editTextEnrollment"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />







    </RelativeLayout>



</ScrollView>


</RelativeLayout>
