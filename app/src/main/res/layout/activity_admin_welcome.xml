<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffff"
    tools:context="com.example.win8.educon.Admin_welcome">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"


            android:id="@+id/textViewAdminName"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#176CEC"
            android:textStyle="bold"
            android:text="Admin Page"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Registration Detail"
            android:id="@+id/buttonTeacherRegDetail"
            android:layout_below="@+id/button8"

        android:background="#FF5722"
        android:textColor="#ffff"

        android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher personal detial"
            android:id="@+id/button8"
            android:background="#00695C"
            android:textColor="#ffff"
            android:layout_below="@+id/button9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student personal Detail"
            android:id="@+id/button9"
            android:background="#e53935"
            android:textColor="#ffff"
            android:layout_below="@+id/buttonStudentRegis"
            android:layout_alignLeft="@+id/buttonStudentRegis"
            android:layout_alignStart="@+id/buttonStudentRegis"
            android:layout_alignRight="@+id/buttonStudentRegis"
            android:layout_alignEnd="@+id/buttonStudentRegis" />

        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Student Registration Detail"
            android:id="@+id/buttonStudentRegis"
            android:background="#6975D2"
            android:textColor="#ffff"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="43dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/button11"
            android:layout_below="@+id/buttonTeacherRegDetail"
            android:layout_alignParentLeft="true"
            android:background="#e53935"
            android:textColor="#ffff"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/imageView"
            android:background="@drawable/download"
            android:layout_below="@+id/textViewAdminName"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
</ScrollView>

</RelativeLayout>
