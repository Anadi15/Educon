<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.win8.educon.Add_Notice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Notice"
        android:id="@+id/textView45"
        android:textColor="#176CEC"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/editTextNotice"
        android:layout_below="@+id/textView45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Notice"
        android:background="#0D47A1"
        android:textColor="#ffff"
        android:layout_below="@+id/editTextNotice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:id="@+id/buttonAddnotice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Notice"
        android:id="@+id/buttonViewNotice"
        android:layout_below="@+id/buttonAddnotice"
        android:layout_marginTop="56dp"
        android:background="#0D47A1"
        android:textColor="#ffff"
        android:layout_alignRight="@+id/buttonAddnotice"
        android:layout_alignEnd="@+id/buttonAddnotice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
