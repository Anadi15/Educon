<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffff"
    tools:context="com.example.win8.educon.teacher_welcome">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#F87217"
            android:textStyle="bold"
            android:id="@+id/textViewteacherName"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#176CEC"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teacher Page"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter Detail"
            android:background="#4CAF50"
            android:id="@+id/button5"
            android:textColor="#ffff"
            android:layout_below="@+id/imageView9"
            android:layout_alignRight="@+id/buttonchngpass"
            android:layout_alignEnd="@+id/buttonchngpass" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/buttonchngpass"
            android:layout_below="@+id/button5"
            android:background="#0D47A1"
            android:textColor="#ffff"
            android:layout_alignTop="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView9"
            android:background="@drawable/images"
            android:layout_below="@+id/textViewteacherName"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See students"
            android:id="@+id/button7"
            android:background="#0D47A1"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buttonchngpass"
            android:layout_alignLeft="@+id/buttonchngpass"
            android:layout_alignStart="@+id/buttonchngpass"
            android:layout_alignRight="@+id/buttonchngpass"
            android:layout_alignEnd="@+id/buttonchngpass" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Notice"
            android:id="@+id/button10"
            android:textColor="#ffff"
            android:background="#4CAF50"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button7"
            android:layout_alignRight="@+id/buttonchngpass"
            android:layout_alignEnd="@+id/buttonchngpass"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7" />
        <Button
            android:background="#F44336"
            android:layout_width="match_parent"
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:text="LOG out"
            android:layout_marginTop="12dp"
            android:id="@+id/button6"
            android:layout_below="@+id/button10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>


</ScrollView>


</RelativeLayout>
